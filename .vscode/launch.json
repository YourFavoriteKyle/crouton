	"version": "0.2.0",
	"configurations": [
		{
			"command": "npm run dev",
			"request": "launch",
			"name": "Debug Sveltekit",
			"type": "node-terminal",
			"cwd": "${workspaceFolder}/site"
		},
		{
			"name": "Attach by Process ID",
			"processId": "${command:PickProcess}",
			"request": "attach",
			"skipFiles": ["<node_internals>/**"],
			"type": "node"
		}
	]
}
